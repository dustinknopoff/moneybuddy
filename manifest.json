{
  "manifest_version": 2,

  "name": "Money Buddy",
  "version": "0.1.0",
  "description": "Chrome Extension to hide prices over your price range.",
  "page_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["declarativeContent", "storage"],
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "content_scripts": [
    {
      "js": ["inject.js"],
      "css": ["inject.css"],
      "matches": ["https://www.amazon.com/*"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "unsafe-inline"
}
